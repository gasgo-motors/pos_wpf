<UserControl x:Class="PosClient.Views.Dialogs.CutomErrorDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PosClient.Views.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox Height="50" VerticalAlignment="Top" Background="Transparent" Margin="10" Foreground="Red" FontSize="16" BorderThickness="0" x:Name="tbx_error"  IsReadOnly="True" TextWrapping="Wrap" Text="{Binding Path=.}" />
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Click="ButtonBase_OnClick" >გამოსვლა</Button>
    </Grid>
</UserControl>
